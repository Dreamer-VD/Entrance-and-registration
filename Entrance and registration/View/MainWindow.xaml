<Window x:Class="Entrance_and_registration.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Entrance_and_registration"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="Authorization">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Авторизация"/>

        <StackPanel Grid.Row="1" Margin="90,0,90,0" VerticalAlignment="Center">
            <TextBlock Text="Логин"/>
            <TextBox x:Name="tbLogin"/>
            <TextBlock Text="Пароль"/>
            <TextBox x:Name="tbPassword"/>
        </StackPanel>
        <Button Content="Вход" HorizontalAlignment="Center" Margin="0,305,0,0" Grid.Row="1" VerticalAlignment="Top" Width="192" Height="49" Click="input_Click"/>
    </Grid>
</Window>
